		//console.log(dialog1);
		dialog1.open = true
		dialog2.open = false
	}

	let nowyPlik = document.getElementById("nowyPlik")
	nowyPlik.addEventListener("click", otworzDialog2)
	let dialog2 = document.getElementById("dialog2")

	function otworzDialog2() {
		//console.log(dialog2);
		dialog2.open = true
		dialog1.open = false
	}

</script>